<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph.xml"
    app:startDestination="@id/videoFragment">

    <fragment
        android:id="@+id/videoFragment"
        android:name="com.skyline_info_system.baseapp.views.fragment.VideoFragment"
        android:label="VideoFragment"
        tools:layout="@layout/fragment_video">
        <action
            android:id="@+id/action_videoFragment_to_videoPlayerFragment"
            app:destination="@id/videoPlayerFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.skyline_info_system.baseapp.views.fragment.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_photoPickerFragment"
            app:destination="@id/photoPickerFragment" />
    </fragment>
    <fragment
        android:id="@+id/videoPlayerFragment"
        android:name="com.skyline_info_system.baseapp.views.fragment.VideoPlayerFragment"
        android:label="VideoPlayerFragment"
        tools:layout="@layout/fragment_video_player" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.skyline_info_system.baseapp.views.fragment.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_whatsAppMessageFragment"
            app:destination="@id/whatsAppMessageFragment" />
    </fragment>
    <fragment
        android:id="@+id/whatsAppMessageFragment"
        android:name="com.skyline_info_system.baseapp.views.fragment.WhatsAppMessageFragment"
        android:label="WhatsAppMessageFragment"
        tools:layout="@layout/fragment_whats_app_message" />
    <fragment
        android:id="@+id/photoPickerFragment"
        android:name="com.skyline_info_system.baseapp.views.fragment.PhotoPickerFragment"
        android:label="PhotoPickerFragment"
        tools:layout="@layout/fragment_photo_picker" />

</navigation>